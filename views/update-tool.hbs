<div class="backposter">
  <div class="poster"></div>
  <h1 class="title">Update tools</h1>
</div>

{{#if errorMessages.length}}
  <p>Couldn't Update the tools because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

<h1 class="pagetitle">Update Tools</h1><br />
<form action="/tools/update" method="post">

  <div class="blank">
    <div class="blankleft">
      <p>Title:</p>
      <input type="text" class="typeblank" name="title" value="{{title}}" />
    </div>
  </div>
  <div class="blank">
    <div class="blankleft">
      <p>Grade:</p>
      <input type="number" class="typeblank" name="grade" value="{{grade}}" />
    </div>
  </div>
  <input type="submit" class="submitbtn" value="Update" />

</form>